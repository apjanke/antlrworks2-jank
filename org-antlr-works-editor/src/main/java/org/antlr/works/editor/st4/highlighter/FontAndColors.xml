<!DOCTYPE fontscolors PUBLIC "-//NetBeans//DTD Editor Fonts and Colors settings 1.1//EN" "http://www.netbeans.org/dtds/EditorFontsColors-1_1.dtd">
<fontscolors>
    <!--
        COMMON
    -->
    <fontcolor name="identifier" default="identifier"/>
    <fontcolor name="keyword" default="keyword"/>
    <fontcolor name="reference" foreColor="FF008800">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="comment" default="comment" />
    <fontcolor name="stringliteral" default="string" />
    <fontcolor name="whitespace" default="whitespace"/>
    <fontcolor name="operator" default="operator" />

    <!--
        StringTemplate
    -->
    <fontcolor name="templateUse" default="identifier"/>
    <fontcolor name="templateDeclaration" default="templateUse">
        <font style="bold"/>
    </fontcolor>
    <fontcolor name="regionUse" default="templateUse">
        <font style="italic"/>
    </fontcolor>
    <fontcolor name="regionDeclaration" default="regionUse">
        <font style="bold,italic"/>
    </fontcolor>
    <fontcolor name="dictionaryUse" default="templateUse"/>
    <fontcolor name="dictionaryDeclaration" default="dictionaryUse">
        <font style="bold"/>
    </fontcolor>
    <fontcolor name="parameterUse" default="identifier" foreColor="FF008000"/>
    <fontcolor name="parameterDeclaration" default="parameterUse" />
    <fontcolor name="attributeUse" default="parameterUse">
        <font style="italic" />
    </fontcolor>

    <fontcolor name="expressionOption" default="identifier">
        <font style="italic"/>
    </fontcolor>

    <fontcolor name="bigStringDelimiter" bgColor="FFFFFF00" />
    <fontcolor name="expressionDelimiter" />
    <fontcolor name="anonymousTemplateDelimiter">
        <font style="bold" />
    </fontcolor>
    <fontcolor name="escapeCharacter" foreColor="FF008080" />
    <fontcolor name="escapeTag" foreColor="FF008080" />
</fontscolors>
